generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(cuid())
  googleSub  String   @unique
  email      String?  @unique
  name       String?
  image      String?
  createdAt  DateTime @default(now())
  lastLoginAt DateTime @updatedAt
}

model Resume {
  id        String   @id @default(cuid())
  userEmail String
  locale    String   @default("ru")
  title     String?
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Share fields: добавляем в модель Resume, т.к. отношение 1:1 (одно резюме - одна share ссылка)
  // Это проще, чем отдельная таблица: меньше JOIN-ов, меньше запросов, проще в поддержке
  shareId  String?   @unique // Крипто-рандомный ID для публичной ссылки
  isShared Boolean   @default(false) // Флаг доступности по share ссылке
  sharedAt DateTime? // Дата включения share (для истории)
}
